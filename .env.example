# Example environment variables for academy-server
# Copy to `.env` and fill real secrets. Do NOT commit `.env`.

# Postgres (used by docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=academy

# Database URL used by the app when running on the host (Prisma)
# If docker-compose maps the port to host use localhost; when running inside compose use the service name `postgres`.
# Example for host: postgresql://postgres:postgres@localhost:5432/academy?schema=public
# Example for inside docker compose: postgresql://postgres:postgres@postgres:5432/academy?schema=public
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/academy?schema=public"

# App
PORT=3333
NODE_ENV=development

# JWT / Auth
JWT_SECRET=change-me-strong-secret
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=change-me-strong-refresh-secret
REFRESH_TOKEN_EXPIRES_IN=7d

# Cookie
COOKIE_SECRET=change-me-strong-cookie-secret
COOKIE_SECURE=false
